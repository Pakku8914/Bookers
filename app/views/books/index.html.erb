<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="title ribon">Title</th>
      <th class="body ribon">Body</th>
      <th colspan="3" class="link"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="titel"><%= book.title %></td>
        <td class="body"><%= book.body %></td>
        <td class="link"><%= link_to "Show", book_path(book) %></td>
        <td class="link"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="link"><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form">
  <%= form_with model:@book, local:true do |f| %>
  <h1>New book</h1>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <br>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
      <br>
    <% end %>
  <% end %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  
  <% end %>
</div>

