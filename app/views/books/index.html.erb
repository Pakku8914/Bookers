<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class="title ribon">Title</th>
      <th class="body ribon">Body</th>
      <th colspan="3" class="link"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="titel">title name</td>
      <td class="body">body text</td>
      <td class="link">Show</td>
      <td class="link">Edit</td>
      <td class="link">Destroy</td>
    </tr>
  </tbody>
</table>

<div class="form">
  <%= form_with model:@book, local:true do |f| %>
  <h1>New book</h1>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
  
  <% end %>
</div>

